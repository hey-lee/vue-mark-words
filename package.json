{
  "name": "vue-mark-words",
  "version": "0.0.1",
  "description": "A Vue component for mark and highlighting words within text with flexible word boundary matching and customizable styling.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest"
  },
  "tsup": {
    "target": "es5",
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "noExternal": [
      "slice-text"
    ],
    "dts": true,
    "clean": true,
    "sourcemap": true,
    "splitting": false
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "vue",
    "mark",
    "words",
    "text",
    "match",
    "highlight",
    "splitter",
    "replace",
    "regexp"
  ],
  "author": "DBL <me@banli.co>",
  "homepage": "https://github.com/hey-lee/vue-mark-words",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hey-lee/vue-mark-words.git"
  },
  "bugs": {
    "url": "https://github.com/hey-lee/vue-mark-words/issues"
  },
  "devDependencies": {
    "@swc/core": "^1.5.7",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^26.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5.7.2",
    "vitest": "^3.1.1",
    "vue": "^3.5.13"
  },
  "dependencies": {
    "slice-text": "^0.0.7"
  },
  "peerDependencies": {
    "vue": "^3.5.13"
  }
}